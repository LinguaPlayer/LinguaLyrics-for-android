<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="@string/settings_album_art_category">

    </PreferenceCategory>

    <CheckBoxPreference
        android:key="@string/settings_key_expand_app_bar"
        android:title="@string/settings_expand_app_bar_on_lyric_click"
        android:summary="@string/settings_expand_app_bar_summary"
        android:defaultValue="true" />

    <ListPreference
        android:key="@string/settings_key_album_art"
        android:title="@string/settings_album_art"
        android:summary="@string/settings_album_art_summary"
        android:entries="@array/prefs_artwork_entries"
        android:entryValues="@array/prefs_artwork_values"
        android:defaultValue="@string/settings_album_art_online_value"/>

    <PreferenceCategory
        android:title="@string/settings_search">
    </PreferenceCategory>
    <CheckBoxPreference
        android:key="@string/settings_key_show_previous_search"
        android:title="@string/settings_show_previous_search_title"
        android:summary="@string/settings_show_previous_search_summary"
        android:defaultValue="true" />

</PreferenceScreen>